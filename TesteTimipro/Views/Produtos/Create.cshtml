@model TesteTimipro.Models.Produto

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <br />
                @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Ativo)
                @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3 col-xs-5">
                <input type="submit" value="CADASTRAR" class="btn btn-block btn-sm btn-success" />
            </div>
            <div class="col-md-offset-6 col-md-3 col-xs-offset-2 col-xs-5">
                @Html.ActionLink("RETORNAR A LISTA", "Index", null, new { @class = "btn btn-block btn-sm btn-primary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
